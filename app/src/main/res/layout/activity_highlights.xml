        <!-- Erster Eintrag -->
        <android.support.v7.widget.CardView
            android:id="@+id/entry1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/entry1_emo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/em1_h" />

                    <TextView
                        android:id="@+id/entry1_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/highlights"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- SPACER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorAccent" />

                <ImageView
                    android:id="@+id/entry1_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img1" />

                <!-- SPACER -->
                <View
                    android:id="@+id/entry1_div"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorAccent" />

                <!-- ICONS & Datum -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/entry1_work"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_work" />

                        <ImageView
                            android:id="@+id/entry1_friends"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_people" />

                        <ImageView
                            android:id="@+id/entry1_food"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_food" />

                        <ImageView
                            android:id="@+id/entry1_shopping"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_store" />

                        <ImageView
                            android:id="@+id/entry1_health"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_bike" />

                        <ImageView
                            android:id="@+id/entry1_custom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_edit_black_24dp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/entry1_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_weight="2"
                        android:text="21.04.2018"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="2dp"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>




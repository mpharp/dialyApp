<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EntryView"
    tools:showIn="@layout/activity_entry_view">
    <!--Scrollable Inhalt-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cardview_light_background">
      <!--Titel-->
     <TextView
         android:id="@+id/titel_entry_view"
         android:textSize="28dp"
         android:textAlignment="center"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="test1\n"/><!-- hier Titel aus json einfügen-->

        <!--Trenner-->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#70333333"/>
        <!--Activities-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!--Activities die ja nach json inhalt anders gefärbt sind-->

        </LinearLayout>
        <!--Trenner-->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#70333333"/>
      <!--emo Datum Photo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <!--Emo und Datum -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/emote_entry_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="32dp"
                    android:src="@drawable/em1"/>
                <TextView
                    android:id="@+id/date_entry_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Mo \n 30.3"
                    android:textSize="24sp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <!--Photo-->
            <ImageView
                android:id="@+id/photo_entry_view"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:src="@drawable/stat_verlauf"
                android:layout_height="match_parent"
                />

        </LinearLayout>
        <!--Trenner-->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#70333333"/>

        <!--location-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/location_entry_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Wien"
                android:textAlignment="center"
                android:layout_marginTop="16dp"/>
            <Button
                android:id="@+id/mapbutton_entry_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Map"
                android:drawableEnd="@drawable/ic_menu_share"<!--durch needle ersetzen-->

            />
        </LinearLayout>

        <!--Trenner-->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#70333333"/>

      <!--Notizen-->
        <TextView
            android:id="@+id/notes_entry_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="#30333333"
            android:text="notes\n"/><!-- hier notizen aus json einfügen-->



      <!--share button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_marginVertical="16dp"/>
            <Button
                android:id="@+id/sharebutton_entry_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:text="Share"
                android:drawableEnd="@drawable/ic_menu_share"
                />
        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EntryView"
    tools:showIn="@layout/activity_entry_view">
    <!--Scrollable Inhalt-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cardview_light_background">
      <!--Titel-->
     <TextView
         android:id="@+id/titel_entry_view"
         android:textSize="28dp"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="test1\n"/><!-- hier Titel aus json einfügen-->
      <!--Activities-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!--Activities die ja nach json inhalt anders gefärbt sind-->

        </LinearLayout>

      <!--emo Datum Photo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!--Emo und Datum -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
            <!--Photo-->


        </LinearLayout>
      <!--Notizen-->
        <TextView
            android:id="@+id/notes_entry_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="notes\n"/><!-- hier notizen aus json einfügen-->

      <!--share button-->

        <Button
            android:id="@+id/sharebutton_entry_view"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="80dp"
            android:text="Share"
            android:drawableEnd="@drawable/ic_menu_share"
            />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>